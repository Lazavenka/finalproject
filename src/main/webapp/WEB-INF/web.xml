<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">
    <display-name>ResearchCenter</display-name>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>500</error-code>
        <location>/jsp/error/error500.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/jsp/error/error403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error/error404.jsp</location>
    </error-page>
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>by.lozovenko.finalproject.controller.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>newUserFilter</filter-name>
        <filter-class>by.lozovenko.finalproject.controller.filter.NewUserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>newUserFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>commandPermissionFilter</filter-name>
        <filter-class>by.lozovenko.finalproject.controller.filter.CommandPermissionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>commandPermissionFilter</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>currentPageFilter</filter-name>
        <filter-class>by.lozovenko.finalproject.controller.filter.CurrentPageFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>currentPageFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter>
        <filter-name>pagePermissionFilter</filter-name>
        <filter-class>by.lozovenko.finalproject.controller.filter.PagePermissionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>pagePermissionFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

    <jsp-config>
        <taglib>
            <taglib-uri>customtags</taglib-uri>
            <taglib-location>/WEB-INF/tld/taglib.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>